<h2> MY TASKS </h2>
<% @tasks.each do |task| %>
<% if task.completed? %>
<i class="fa-solid fa-square-check"></i>
<% else %>
<i class="fa-regular fa-square"></i>
<% end %>
<%= link_to task.name, task_path(task), class: 'text-secondary text-decoration-none' %>
<% end %>


<%= link_to '+', new_task_path, class: 'btn btn-light'  %>
